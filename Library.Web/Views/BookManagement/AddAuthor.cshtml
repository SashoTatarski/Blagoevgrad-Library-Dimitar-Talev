@model AddAuthorViewModel
@{
    ViewData["Title"] = "AddAuthor";
}

<div class="col-md-4">
    <h5>Add Author</h5>
    <form asp-action="AddAuthor" asp-controller="BookManagement" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"> Enter new author's name </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger">  </span>
        </div>       
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>
