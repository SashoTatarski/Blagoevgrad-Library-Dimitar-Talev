@model NotificationsViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Notifications</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">User</th>
            <th scope="col">Message</th>
            <th scope="col">Seen</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.NotificationsList)
        {
            <tr>
                <td scope="row">@item.DateSent.ToString("dd.MM.yyyy")</td>                            
                <td>
                    <a asp-controller="AccountManagement" asp-action="Details" asp-route-id="@Model.UserId">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        @item.User.Username
                    </a>
                </td>
                <td>@item.Message</td>
                <td>@item.IsSeen</td>
            </tr>
        }

    </tbody>
</table>


<partial name="_ReturnButtonsPartial" />