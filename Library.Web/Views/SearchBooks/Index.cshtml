@model SearchViewModel
@using Microsoft.Extensions.Primitives;
@{
    ViewData["Title"] = "SearchBooks";
}

<div class="row mt-5">
    <form class="col-lg-6" asp-controller="SearchBooks" asp-action="SearchResults" method="post">
        <div class="row">
            <div class="col-sm-9">
                <input asp-for="@Model.SearchName" placeholder="Search..." class="form-control" />
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-primary">Search!</button>
            </div>
        </div>
        <p></p>
        <p></p>
    </form>

    <table class="table table-stripped table-bordered table-sm">
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Year</th>
            <th>Rack</th>
            <th>Rating</th>

            @if (User.IsInRole("admin"))
            {
                <th>Copies</th>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <th class="text-center">Actions</th>
            }
        </tr>

        @foreach (var book in Model.AllBooks)
        {
            <partial name="_BooksPartial" model="book" />
        }

    </table>
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
@{ var referrer = this.Context.Request.Headers["Referer"]; }

@if (referrer != default(StringValues))
{
    <a href="@referrer.ToString()" class="btn btn-outline-primary">Go Back</a>
}

