@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@{ var statusMessage = TempData["Status"]?.ToString(); }

@if(!string.IsNullOrWhiteSpace(statusMessage))
{
    <div class="alert alert-danger">
        @statusMessage
    </div>
}


<div class="col-md-4">
    <h5 id="login-header">Login </h5>
    <form asp-action="Login" asp-controller="Auth">
        <div class="form-group">
            <i class="fa fa-user" area-hidden="true"></i>
            <label asp-for="Username" class="control-label"> </label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger">  </span>
        </div>
        <div class="form-group">
            <i class="fa fa-key" area-hidden="true"></i>
            <label asp-for="Password" class="control-label"> </label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger">  </span>
        </div>
        <div class="form-group">
            <button type="submit" id="login-button"class="btn btn-primary">Login</button>
        </div>
    </form>
</div>

<partial name="_ReturnButtonsPartial" />